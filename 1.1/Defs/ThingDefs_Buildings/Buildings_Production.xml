<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--============================== DISENCHANTING TABLE ==============================-->
  <ThingDef ParentName="BuildingBase">
    <defName>DisenchantingRimcardTable</defName>
    <label>Rimcard Disenchanting Table</label>
    <thingClass>Building_WorkTable</thingClass>
    <description>Disenchant Rimcards to collect dust or craft RimCards from dust. You can also create Shiny Rimcards using the original version and some gold.</description>
    <graphicData>
      <texPath>Things/Building/Production/DisenchantTableRimCard</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,1.2)</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>
    <statBases>
      <Mass>34</Mass>
      <WorkToBuild>1000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>DisenchantCommon</li>
      <li>DisenchantCommonShiny</li>
      <li>DisenchantRare</li>
      <li>DisenchantRareShiny</li>
      <li>DisenchantEpic</li>
      <li>DisenchantEpicShiny</li>
      <li>DisenchantLegendary</li>
      <li>DisenchantLegendaryShiny</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <compClass>CompAffectedByFacilities</compClass>
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <researchPrerequisites>
      <li>RimCardsDisenchanting</li>
    </researchPrerequisites>
  </ThingDef>
