<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--============================== RIMCARD PLAYING TABLE ==============================-->
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>rimcardsPlay</defName>
    <label>RimCards Table</label>
    <description>Perfect spot to practice your RimCards strategies.</description>
    <graphicData>
      <texPath>Things/Furniture/playTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
      </shadowData>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.05,0.27,1.9,1.73)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <size>(1,1)</size>
    <defaultPlacingRot>North</defaultPlacingRot>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>true</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <building>
      <joyKind>Gaming_Cerebral</joyKind>
    </building>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>8000</WorkToBuild>
      <Mass>5</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>7</Beauty>
      <JoyGainFactor>1.5</JoyGainFactor>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <pathCost>70</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
  </ThingDef>
  <!--============================== RIMCARD DISPLAY ==============================-->
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>rimcardsTable</defName>
    <label>RimCard Display</label>
    <description>This might look like a regular table but it's actually made especially for RimCards.</description>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Trinkets_Images/RimCardsTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(4.5,2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>8</Mass>
      <WorkToBuild>600</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(4,1)</size>
    <defaultPlacingRot>North</defaultPlacingRot>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>false</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>RimCards</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationHotKey>Misc12</designationHotKey>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
  </ThingDef>
